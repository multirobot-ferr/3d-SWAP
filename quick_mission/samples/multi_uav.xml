<!-- First of all, define your uavs. Each uav requires a uri (usually, the root namespace of its ros topics), and an id to
identify it during the mission, inside this xml -->
<uav uri="/quad1" id="1"/>
<uav uri="/quad2" id="2"/>

<!-- Parallel actions. Each of the sequences will start at the same time, and group will finish after all sequences have finished -->
<command type="parallel">
	<command type="sequence" robotId="1">
		<take_off/>
		<land/>
	</sequence>
	
	<command type="sequence" robotId="2">
		<take_off/>
		<goto x="2" y="0"/>
		<land/>
	</sequence>
</command>

<!-- You can add parallel actions after each other to force synch points at the start of each one -->
<command type="parallel">
	<command type="sequence" robotId="1">
		<take_off/>
		<land/>
	</command>
	
	<command type="sequence" robotId="2">
		<take_off/>
		<land/>
	</command>
</command>
